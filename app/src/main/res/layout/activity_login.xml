<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity$MainActivity2"
    android:background="@drawable/img_4">
    <TextView
        android:id="@+id/txtbt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Điện Máy Quân"
        android:textColor="#E91E63"
        android:textSize="25dp"
        android:layout_margin="20dp"
        android:layout_centerHorizontal="true">

    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="user"
        android:textSize="24sp"
        android:layout_below="@+id/txtbt"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp">

    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="pass"
        android:textSize="24sp"
        android:layout_below="@+id/txtuser1"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp">

    </TextView>
    <EditText
        android:id="@+id/txtuser1"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:ems="100"
        android:layout_marginLeft="100dp"
        android:inputType="textPersonName"
        android:layout_below="@+id/txtbt"
        android:layout_marginTop="20dp"
        />

    <EditText
        android:id="@+id/txtpass1"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:ems="100"
        android:inputType="textPersonName"
        android:layout_below="@+id/txtuser1"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="100dp"
        />
    <Button
        android:id="@+id/btnlogin1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="login"
        android:layout_below="@+id/txtpass1"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="70dp"
        />
    <Button
        android:id="@+id/btnsingin1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="singin"
        android:layout_below="@+id/txtpass1"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="230dp"
        />






</RelativeLayout>